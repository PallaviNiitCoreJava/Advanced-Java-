<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>cookies.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>cookies.Welcome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>hiddenField.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Confirmation</servlet-name>
        <servlet-class>hiddenField.Confirmation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewLogin</servlet-name>
        <servlet-class>urlRewriting.NewLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewWelcome</servlet-name>
        <servlet-class>urlRewriting.NewWelcome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>httpLogin</servlet-name>
        <servlet-class>httpSession.httpLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>httpWelcome</servlet-name>
        <servlet-class>httpSession.httpWelcome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HttpLogout</servlet-name>
        <servlet-class>httpSession.HttpLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Confirmation</servlet-name>
        <url-pattern>/Confirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewLogin</servlet-name>
        <url-pattern>/NewLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewWelcome</servlet-name>
        <url-pattern>/NewWelcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>httpLogin</servlet-name>
        <url-pattern>/httpLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>httpWelcome</servlet-name>
        <url-pattern>/httpWelcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpLogout</servlet-name>
        <url-pattern>/HttpLogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
